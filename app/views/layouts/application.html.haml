!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Todo List
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_pack_tag 'application'
  %body
    .Header
      .HeaderItems
        %h1.HeaderItems__title
          Todo List
        %ul.HeaderItems__user
          %li.HeaderItems__name
            = current_user.name
          %li.HeaderItems__icon
            = link_to edit_user_path(current_user) do
              = icon('fas', 'cog')
    = yield
